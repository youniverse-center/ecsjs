{
  "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "module": "ESNext",
      "target": "ESNext",
      "allowJs": false,
      "rootDir": "src",
      "sourceMap": false,
      "esModuleInterop": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "@types"
  },
  "include": [
    "./src/**/*.ts"
  ]
}