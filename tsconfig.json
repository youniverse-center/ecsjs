{
  "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "module": "UMD",
      "target": "ESNext",
      "allowJs": false,
      "sourceMap": false,
      "esModuleInterop": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}